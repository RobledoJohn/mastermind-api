{
    "version": 2,
    "framework": null,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php@0.6.0",
        "config": {
          "includeFiles": "api/**"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ],
    "build": {
      "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://yourproductionurl.com",
  
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
  
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
      },
      "hooks": {
        "build": "apt-get update && apt-get install -y libssl-dev && composer install --no-dev --optimize-autoloader"
      }
    }
  }
  